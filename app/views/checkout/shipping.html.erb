<body>
  <br>
  <br>
  <br>
  
<!-- /.Fixed navbar  --><div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/cart">Cart</a> </li>
        <li class="active"> Checkout </li>
      </ul>
    </div>
  </div>
  <!--/.row-->
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Checkout</span></h1>
    </div>
    
  </div> <!--/.row-->

    <%= form_for @user, url: {controller: "checkout", action: "billing"}, method: "post" do |f| %>
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-12">
      <div class="row userInfo">
        <div class="col-xs-12 col-sm-12">
          <div class="w100 clearfix">
<%= render partial: "menu" %>
            <!--/.orderStep end--> 
          </div>
          
          
          <div class="w100 clearfix">
            <div class="row userInfo">
              <div class="col-lg-12">
                <h2 class="block-title-2"> Please Add Your Address Below: </h2>
              </div>
              
                <div class="col-xs-12 col-sm-6">
                  <div class="form-group required">
                    <label for="InputName">First Name <sup>*</sup> </label>
                    <%= f.text_field :shipping_first_name, class: "form-control", :required => true %>
                    <!-- <input required type="text" class="form-control" id="InputName" placeholder="First Name"> -->
                  </div>
                  <div class="form-group required">
                    <label for="InputLastName">Last Name <sup>*</sup> </label>
                    <%= f.text_field :shipping_last_name, class: "form-control", :required => true %>
                    <!-- <input required type="text" class="form-control" id="InputLastName" placeholder="Last Name"> -->
                  </div>
                  <div class="form-group">
                    <label for="InputEmail">Email </label>
                    <%= f.text_field :email, class: "form-control" %>
                    <!-- <input type="text" class="form-control" id="InputEmail" placeholder="Email"> -->
                  </div>
                  <div class="form-group">
                    <label for="InputCompany">Company </label>
                    <%= f.text_field :shipping_company, class: "form-control" %>
                    <!-- <input type="text" class="form-control" id="InputCompany" placeholder="Company"> -->
                  </div>
                  <div class="form-group required">
                    <label for="InputAddress">Address <sup>*</sup> </label>
                    <%= f.text_field :shipping_address, class: "form-control", :required => true %>
                  </div>
                  <div class="form-group">
                    <label for="InputAddress2">Address (Line 2) </label>
                    <%= f.text_field :shipping_address_2, class: "form-control"%>
                  </div>
                  <div class="form-group required">
                    <label for="InputCity">City <sup>*</sup> </label>
                    <%= f.text_field :shipping_city, class: "form-control", :required => true %>
                  </div>
                  <div class="form-group required">
                    <label for="InputState">State <sup>*</sup> </label>
                    <%= f.select :shipping_state, us_states, {}, {class: "form-control", :required => true} %>
                  </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <div class="form-group required">
                    <label for="InputZip">Zip / Postal Code <sup>*</sup> </label>
                    <%= f.text_field :shipping_zip_code, class: "form-control", :required => true %>
                  </div>
                  <div class="form-group required">
                    <label for="InputCountry">Country <sup>*</sup> </label>
                    <%= f.country_select :shipping_country, {}, {class: 'form-control', :required => true} %>
                  </div>
                  <div class="form-group">
                    <label for="InputAdditionalInformation">Additional information</label>
                    <%= f.text_area :shipping_additional_info, class: "form-control" %>
                  </div>
                  <div class="form-group required">
                    <label for="InputMobile">Mobile phone <sup>*</sup></label>
                    <%= f.text_field :shipping_phone, class: "form-control", :required => true %>
                  </div>
                </div>
              </div>
            
            <!--/row end--> 
            
          </div>
          <div class="cartFooter w100">
            <div class="box-footer">
              <div class="pull-left"> <a class="btn btn-default" href="/shop"> <i class="fa fa-arrow-left"></i> &nbsp; Back to Shop </a> </div>
              <div class="pull-right"> <%= f.submit "Save Address", class: "btn btn-primary btn-small" %></div>
            </div>
          </div>
          <!--/ cartFooter --> 
          
        </div>
      </div>
      <!--/row end--> 
      
    </div>
<%= render partial: "cost" %>
      <!--  /cartMiniTable--> 
      
    </div>
    <!--/rightSidebar--> 
    
  </div> <!--/row-->
  <% end %>
  
  <div style="clear:both"></div>
</div>
<!-- /.main-container-->
<div class="gap"> </div>


