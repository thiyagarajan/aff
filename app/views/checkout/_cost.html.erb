    <div class="w100 cartMiniTable">
      <table id="cart-summary" class="std table">
        <tbody>
          <tr >
            <td>Total products</td>
            <td class="price" ><%= number_to_currency( @cart.total) %></td>
          </tr>
          <tr  style="">
            <td>Shipping</td>
            <td class="price" > <%=  number_to_currency(@cart.shipping_cost)  %> </span></td>
