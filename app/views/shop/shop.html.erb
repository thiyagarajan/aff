<!-- /.Fixed navbar  -->
<div class="container main-container headerOffset"> 
  
  <!-- Main component call to action -->
   <% if @selected_categories.first != nil then %>
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">

        <li> Showing Results In: <%= @selected_categories.first.title %><a href="/shop"> <button class="btn btn-xs">Clear </button> </a> </li>
        
      </ul>
    </div>
  </div>
  <!-- /.row  -->
  <% end %>

  <% if @current_query != nil then %>
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">

        <li> Showing Results For <%= @current_query %> <a href="/shop"> <button class="btn btn-xs">Clear </button> </a> </li>
        
      </ul>
    </div>
  </div>
  <!-- /.row  -->
  <% end %>
  <div class="row"> 
    
    <!--left column-->
    
    <div class="col-lg-3 col-md-3 col-sm-12">
      <div class="panel-group" id="accordionNo"> 
        <!--Category-->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title"> <a data-toggle="collapse"  href="category.html#collapseCategory" class="collapseWill"> <span class="pull-left"> <i class="fa fa-caret-right"></i></span> Category </a> </h4>
          </div>
          <div id="collapseCategory" class="panel-collapse collapse in">
            <div class="panel-body">
              <ul class="nav nav-pills nav-stacked tree">
                <% @categories.keys.each do |category| %>
                  <% count = 0 %>
                  <% Category.where("title LIKE ?", "Clothing, Shoes & Accessories:#{category}%").each do |c| %>
                    <% count += c.items.count %>
                  <% end %>
                  <% if @selected_categories.first == nil %>
                    <li class="active dropdown-tree open-tree"> 
                   <%= form_tag('/shop', method: "post") do %>
                      <%= hidden_field_tag "category", "Clothing, Shoes & Accessories:#{category}" %>
                      <a onclick="this.parentNode.submit();" class="dropdown-tree-a" > <span class="badge pull-right"><%= count %></span> <%= category %></a>
                     <% end %>
                      <ul class="category-level-2 dropdown-menu-tree">
                        <% @categories[category].each do |sub_category| %>
                        <%= form_tag('/shop', method: "post") do %>
                          <%= hidden_field_tag "category", "Clothing, Shoes & Accessories:#{category}:#{sub_category}" %>
                          <li onclick="this.parentNode.submit();"> <a> <%= sub_category %> </a></li>
                        <% end %>
                        <% end %>
                      </ul>
                    </li>
                  <% else %>
                    <% if @selected_categories.first.title.include? category then %>
                      <li class="active dropdown-tree open-tree" > <a  class="dropdown-tree-a" > <span class="badge pull-right"><%= count %></span> <%= category %></a>
                        <ul class="category-level-2 dropdown-menu-tree">
                          <% @categories[category].each do |sub_category| %>
                            <%= form_tag('/shop', method: "post") do %>
                            <%= hidden_field_tag "category", "Clothing, Shoes & Accessories:#{category}:#{sub_category}" %>
                            <li> <a onclick="this.parentNode.parentNode.submit();"> <%= sub_category %> </a></li>
                            <% end %>
                          <% end %>
                        </ul>
                      </li>
                    <% else %>
                      <%= form_tag('/shop', method: "post") do %>
                        <%= hidden_field_tag "category", "Clothing, Shoes & Accessories:#{category}" %>
                        <a onclick="this.parentNode.submit();" class="dropdown-tree-a" > <span class="badge pull-right"><%= count %></span> <%= category %></a>
                      <% end %>
                    <% end %>
                <% end %> 
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <!--/Category menu end-->


        <div class="aspect-holder panel">
        <% @aspects.keys.each do |aspect| %>
          <div class="aspect-panel panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title"> <%= aspect %> <span class="pull-left"> </span></h4>
            </div>
            <div id="collapseBrand" class="panel-collapse collapse in">
              <div class="panel-body maxheight200" style="overflow-y: auto;">
                <% @aspects[aspect].each do |value| %>
                <div class="block-element">
                    <label><input class="aspect-value" type="checkbox" name="<%= aspect %>" value="<%= value %>" /> <%= value %></label>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    
    <!--right column-->
    <div class="col-lg-9 col-md-9 col-sm-12">
      <div class="w100 clearfix category-top">
        <h2> SHOP</h2>
        
      </div>
      <!--/.category-top-->

      
      


      <div class="w100 productFilter clearfix">
       
        <div class="pull-right ">
          <div class="change-order pull-right">
            <select class="sort-by form-control" name="orderby">
             <option value="1">Sort by popularity</option>
              <option selected="selected" value="2">Sort by newness</option>
              <option value="4">Sort by price: low to high</option>
              <option value="3">Sort by price: high to low</option>
            </select>
          </div>
          <div class="change-view pull-right"> <a href="category.html#" title="Grid" class="grid-view"> <i class="fa fa-th-large"></i> </a> <a href="category.html#" title="List" class="list-view "><i class="fa fa-th-list"></i></a> </div>
        </div>
      </div>
      <!--/.productFilter-->

      <div id="itemsBody" class="row  categoryProduct xsResponse clearfix">
      <% @items.each do |item| %>
        <div class="item item-<%= item.id %> col-sm-4 col-lg-4 col-md-4 col-xs-6">
            <div class="product">

              
              <a class="add-fav tooltipHere<% if @is_in_wishlist then %> active <% end %>" data-toggle="tooltip" data-original-title="Add to Wishlist" data-placement="left"   <% if @is_in_wishlist then %>
  onclick="removefromwishlist(<%= item.id %>)"
  <% else %> onclick="addtowishlist(<%= item.id %>); this.className='add-fav tooltipHere selected'" <% end %>>
             

              <% if current_user == nil then %>
              <a class="add-fav tooltipHere" data-original-title="Add to Wishlist" data-placement="left" href="#" data-toggle="modal" data-target="#ModalSignup">
              <% end %>

          <i class="glyphicon glyphicon-heart"></i>

          </a>
            <% if item.photos[0] != nil then %>
              <div class="image"><a href="http://allforfunds.com/<%= item.url %>"><img src=<%= item.photos[0].url %> alt="img" class="img-responsive"></a>
              </div>
            <% end %>
              <div class="description">
                <h4><a href="http://allforfunds.com/<%= item.url %>"><%= item.title %></a></h4>
<!--                 <div class="grid-description">
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. </p>
                </div> -->
               <!--  <span class="size">XL / XXL / S </span> --> </div>
              <div class="price"> <span><%= number_to_currency(item.price) %></span> </div>
              <% in_cart = false %>
              <% if @cart != nil then %>
                <% if @cart.items.include? item then %>
                  <% in_cart = true %>
                <% end %>
              <% end %>

              <% if current_user == nil then %>
              <div class="action-control add-to-cart-<%= item.id %>" <% if in_cart then %> style="display: none;" <% end %>><a class="btn btn-primary" data-toggle="modal" data-target="#ModalSignup"><span class-"add2cart"> Add To Cart </span> </a></div>
              <div class="action-control remove-from-cart-<%= item.id %>" <% if !in_cart then %> style="display: none;" <% end %>><a onclick="removefromcart(<%= item.id %>);" class="btn btn-primary"><span class-"add2cart active"> Remove From Cart </span> </a></div>
            </div>
          </div>
              <% else %>

              <div class="action-control add-to-cart-<%= item.id %>" <% if in_cart then %> style="display: none;" <% end %>><a onclick="addtocart(<%= item.id %>);" class="btn btn-primary"><span class-"add2cart"> Add To Cart </span> </a></div>
              <div class="action-control remove-from-cart-<%= item.id %>" <% if !in_cart then %> style="display: none;" <% end %>><a onclick="removefromcart(<%= item.id %>);" class="btn btn-primary"><span class-"add2cart active"> Remove From Cart </span> </a></div>
            </div>
          </div>
          <% end %>
      <% end %>
      <h4 id="no-items" <% if @items.count > 0 then %> hidden <% end %>> No Products Found </h4>
      </div>

      <!--/.categoryProduct || product content end-->
      
     
      <!--/.categoryFooter--> 
    </div>
    <!--/right column end--> 
  </div>
  <!-- /.row  --> 
</div>
<!-- /main container -->

<div class="gap"> </div>
