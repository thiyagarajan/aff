<script>

  all_possible_item_ids = []
  <% @items.each do |i| %>
    all_possible_item_ids.push(<%= i.id %>);
  <% end %>

  addtocart = function(id) {
    $.ajax({url: "/cart/add",
      dataType: "json",
      data: "item_id=" + id,
      type: "post",
      success: function(result) {
        $(".add-to-cart-"+id).hide();
        $(".remove-from-cart-"+id).show();
      }});
  }

  removefromcart = function(id) {
    $.ajax({url: "/cart/remove",
      dataType: "json",
      data: "item_id=" + id,
      type: "post",
      success: function(result) {
        $(".add-to-cart-"+id).show();
        $(".remove-from-cart-"+id).hide();
      }});
  }

  removefromwishlist = function (id) {
          $.ajax({url: "/wishlist/remove",
          dataType: "json",
          data: "item_id=" + id,
          type: "post",
          success: function(result) {
            $(".add-to-wishlist").show();
            $(".remove-from-wishlist").hide();
          }});

      }

      addtowishlist = function(id) {
          $.ajax({url: "/wishlist/add",
          dataType: "json",
          data: "item_id=" + id,
          type: "post",
          success: function(result) {
            $(".add-to-wishlist").hide();
            $(".remove-from-wishlist").show();
          }});

      }


