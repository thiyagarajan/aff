<script>

  removefromwishlist = function (id) {
      $.ajax({url: "/wishlist/remove",
      dataType: "json",
      data: "item_id=" + id,
      type: "post",
      success: function(result) {
        location.reload();
      }});

  }

  addtocart = function(id) {
    $.ajax({url: "/cart/add",
      dataType: "json",
      data: "item_id=" + id,
      type: "post",
      success: function(result) {
        location.reload();
      }});
  }

</script>


       
    </head>

<body>

    
<%= render 'layouts/login' %>
<%= render 'layouts/signup' %>
<%= render 'layouts/nav' %>
<!-- /.Fixed navbar  --> 



<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="index.html">Home</a> </li>
        <li> <a href="account.html">My Account</a> </li>
        <li class="active"> Wisthlist </li>
      </ul>
    </div>
  </div> <!--/.row-->
  
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-heart"></i> Wisthlist </span></h1>
      <div class="row userInfo">
        <div class="col-lg-12">
          <h2 class="block-title-2"> Update your wishlist if it has changed. </h2>
        </div>
        <div class="col-xs-12 col-sm-12">
          <table>
            <tbody>
              <% if @wishlist == nil then %>
                <h2> There are no items in your wishlist </h2>
              <% else %>
                <% @wishlist.items.each do |item| %>
                    <tr class="CartProduct">
                      <td style="width:10%" class="CartProductThumb">
                        <div> <a href=<%= item.url %>><img src=<%= item.photos[0].url %> alt="img"></a> </div></td>
                      <td style="width:40%"><div class="CartDescription">
                          <h4> <a href=<%= item.url %>><%=item.title %></a> </h4>
                          <!-- <span class="size">12 x 1.5 L</span> -->
                          <div class="price"> <span><%= item.price %></span> </div>
                        </div></td>
                      <td style="width:15%">
                          <a class="btn btn-primary"> 
                          <span onclick="addtocart(<%= item.id %>); removefromwishlist(<%= item.id %>);" class="add2cart"><i class="glyphicon glyphicon-shopping-cart"> </i> Add to cart </span> 
                          </a>
                      </td>
                      <td style="width:40%" class="delete" onclick="removefromwishlist(<%= item.id %>);"><a title="Delete"> <i class="glyphicon glyphicon-trash fa-2x"></i> </a></td>
                    </tr>
              <% end %>
              <% end%>
              
            </tbody>
          </table>
        </div>
        
        <div class="col-lg-12 clearfix">
          <ul class="pager">
            <li class="previous pull-right"><a href="index.html"> <i class="fa fa-home"></i> Go to Shop </a></li>
            <li class="next pull-left"><a href="account.html"> &larr; Back to My Account</a></li>
          </ul>
        </div>
        
      </div>
      <!--/row end--> 
      
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5"> </div>
  </div>
  <!--/.row-->
  <div style="clear:both"></div>
</div> <!-- /main-container -->

<div class="gap"> </div>

<%= render 'layouts/footer' %>

</html>


